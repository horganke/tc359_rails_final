<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
   <% if not (@characters.empty?) %>
  <thead>
    <tr>
      <th>Name</th>
      <th>Powers</th>
      <th>First appearance</th>
      <th>Good</th>
      <th>Evil</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% end %>

  <tbody>
    <% if (@characters.empty?) %>
      <p>No character found.</p>
      <%= link_to 'Full Character Listings', characters_path %>
    <% else %>
      <% @characters.each do |character| %>
        <tr>
          <td><%= character.name %></td>
          <td><%= character.powers %></td>
          <td><%= character.first_appearance %></td>
          <td><%= character.good %></td>
          <td><%= character.evil %></td>
          <td><%= link_to 'Show', character %></td>
          <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_character_path(character) %></td>
          <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Character', new_character_path %>
<% end %>
